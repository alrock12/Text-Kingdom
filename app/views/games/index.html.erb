<div class="center">

	<h1> GameHub</h1>

	<form class="search" role="search">
  		<div class="search-component form-group">
    		<input type="text" class="form-control" placeholder="Search">
  		</div>
  		<button type="submit" class="search-component btn btn-default">Find</button>
	</form>

	<div class="genres panel-body">
	    <div class="row">
			<div class="col-md-4"><div id="fantasy" class="genre-panel"><h1>Fantasy</h1></div></div>
			<div class="col-md-4"><div id="mystery" class="genre-panel"><h1>Mystery</h1></div></div>
			<div class="col-md-4"><div id="dungeon" class="genre-panel"><h1>Dungeon</h1></div></div>
		</div>
	</div>
	
	<div class="panel panel-default newest">
	  <div class="panel-heading">
	    <h3 class="panel-title">Newest Games</h3>
	  </div>
	  <div class="panel-body">
	    Panel content
	  </div>

	  <%= will_paginate @game_newest %>
	  <!-- Table -->
	  <table class="table">
		<tr>
		  <th>Title</th>
		  <th>Author</th> 
		  <th class="plays">Plays</th>
		  <th class="rating">Rating</th>
		  <th></th>
		</tr>

		<!-- Pull subsequent rows from db -->
		<% @game_newest.each do |game| %>
			<tr>
			  <td><%= game.title %></td>
			  <td><%= link_to game.user.username, user_path(game.user) %></td> 
			  <td><%= rating(game) %></td>
			  <td><%= link_to "Play!", '/games/' + game.id.to_s, class: "play-now btn" %></td>
			</tr>
		<% end %>
  	  </table>
  	  <%= will_paginate @game_newest %>

	</div>
	
	<div class="panel panel-default top-week">
	  <div class="panel-heading">
	    <h3 class="panel-title">Top of Week</h3>
	  </div>
